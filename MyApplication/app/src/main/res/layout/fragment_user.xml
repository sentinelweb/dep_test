<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <co.uk.sentinelweb.depop.test.view.UserHeaderView
        android:id="@+id/view_user_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/material_default_margin"/>

    <TabHost
        android:id="@+id/view_user_tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TabWidget
                android:id="@android:id/tabs"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                />

            <android.support.v4.view.ViewPager
                android:id="@+id/view_user_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <!--<GridView-->
                    <!--android:id="@+id/view_user_selling"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:background="@color/grey_300"-->
                    <!--android:numColumns="3"></GridView>-->
                <!--<GridView-->
                    <!--android:id="@+id/view_user_likes"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:numColumns="3"></GridView>-->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/view_user_selling"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/view_user_likes"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </android.support.v4.view.ViewPager>
        </LinearLayout>
    </TabHost>
</RelativeLayout>
